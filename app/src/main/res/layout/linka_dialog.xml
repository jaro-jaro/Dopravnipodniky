<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clLinkaDIalog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etVybirani"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/zadejte_cislo_linky"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCisloLinky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvBarvaLinky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/zvolte_barvu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etVybirani" />

    <Button
        android:id="@+id/btnBarvaLinky"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBarvaLinky" />



    <Button
        android:id="@+id/btnDopravaLinka"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:iconTint="@color/tmava"
        app:layout_constraintBottom_toBottomOf="@+id/btnBarvaLinky"
        app:layout_constraintEnd_toEndOf="@+id/btnBarvaLinky"
        app:layout_constraintTop_toTopOf="@+id/btnBarvaLinky" />

    <Button
        android:id="@+id/btnDolevaLinka"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_keyboard_arrow_left_24"
        app:iconTint="@color/tmava"
        app:layout_constraintBottom_toBottomOf="@+id/btnBarvaLinky"
        app:layout_constraintStart_toStartOf="@+id/btnBarvaLinky"
        app:layout_constraintTop_toTopOf="@+id/btnBarvaLinky" />

</androidx.constraintlayout.widget.ConstraintLayout>